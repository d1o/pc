@model IEnumerable<string>

<br>
<a asp-action="List" asp-controller="Product" asp-route-category="">
    <button type="button" class="btn btn-secondary btn-block">Strona główna</button>
</a>
<br>

@foreach (string category in Model)
{
    @if (category == ViewBag.SelectedCategory)
    {
        <a asp-action="List" asp-controller="Product" asp-route-category="@category" asp-route-productPage="1">
            <button type="button" class="btn btn-primary btn-block">@category</button>
        </a>    
    }
    else {
        <a asp-action="List" asp-controller="Product" asp-route-category="@category" asp-route-productPage="1">
            <button type="button" class="btn btn-secondary btn-block">@category</button>
        </a>
    }

    <br>
}